{
  "manifest_version": 3,
  "name": "Date Converter",
  "version": "0.1.0",
  "description": "Convert dates between different formats with a simple right-click. Features contextual date conversion.",
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["toastify.css"],
      "js": [
        "toastify.js",
        "shared.js",
        "constants.js",
        "utils.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["constants.js", "utils.js"],
    "matches": ["<all_urls>"]
  }]
}
